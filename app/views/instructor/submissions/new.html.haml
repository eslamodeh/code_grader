%h3
  = "Add a new submission for #{@course.name} course / #{@work.work_type} #{@work.name} "
%h5
  = form_for [:instructor, :course, :work, @submission] do |f|
    = f.text_area :code, class: "form-control code", value: @submission.code
    = "Language"
    = f.select :language, @Submission::LANGUAGES_MAP.keys, selected: @submission.language
    .actions
      = f.submit @submission.id.present? ? "Update code" : "Submit code", class: "btn btn-success"
      = link_to "Cancel", student_course_work_@submissions_path(@course.id, @work.id), class: "btn btn-danger"
