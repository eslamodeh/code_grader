.center
  %h2= "#{@course.name} samples"
  %br
  /instructor/courses/:course_id/works/:work_id/samples/new(
  = link_to "Add new sample", new_instructor_course_work_sample_path(@course.id, @work.id), class: "btn btn-success"
  = link_to "My submissions", instructor_course_work_submissions_path(@course.id, @work.id), class: "btn btn-success"
  %br
  %br
  .row
    .col-2.overflow-wrap
      = "#"
    .col-4.overflow-wrap
      = "Input"
    .col-4.overflow-wrap
      = "Expected output"
    .col-2.overflow-wrap
      = ""
  %hr
  - @samples.each_with_index do |sample, index|
    = form_for [:instructor, @course, @work, sample] do |f|
      .row
        .col-2.overflow-wrap
          = index + 1
        .col-4.overflow-wrap
          = f.text_area :input, class: "form-control enable-resize"
        .col-4.overflow-wrap
          = f.text_area :output, class: "form-control enable-resize"
        .col-2.overflow-wrap
          = f.submit "Update!", class: "btn btn-warning"
          = link_to "Delete!", instructor_course_work_sample_path(@course.id, @work.id, sample.id), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete this sample ?"}
    %br 
    %hr