<!DOCTYPE html>
<html>
  <head>
    <title>Code Grader</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand">Code Grader</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "Home", current_user.present? ? profile_path : root_path, class: "nav-link" %>
        </li>
        <%= current_user_navbar_functions %>
      </ul>

      <ul class="navbar-nav">
        <% if current_user.present? %>
          <img src="/assets/image.jpg" width="35" height="35" alt="" class="rounded-circle profile-icon">
          <li class="nav-item active">
            <%= link_to current_user.email, edit_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Sign out", logout_path, method: :delete, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item active">
            <%= link_to "Instructor", new_instructor_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Student", new_student_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
  
  <br>
  <br>
  <body class="<%= controller_name%> <%= action_name %>">
    <div class="container">
      <% flash.each do |key, value| %>
        <!-- for devise -->
        <% if key === "alert" %>
          <% key = "danger" %>
        <% elsif key === "notice" %>
          <% key = "success" %>
        <% end %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <hr>
      <br>
      <br>
      <%= yield %>
    </div>
  </body>
</html>
